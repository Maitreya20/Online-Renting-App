<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_vehicle_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        app:cardCornerRadius="@dimen/padding_4"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/layout_vehicle_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_tenant_vehicle"
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_80"
                android:layout_marginTop="@dimen/padding_10"
                android:padding="@dimen/padding_3"
                android:src="@drawable/car_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_5"
                android:layout_marginRight="@dimen/padding_5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_my_booking_vehicle_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:text="@string/car"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/tv_my_booking_vehicle_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_3"
                    android:text="@string/price"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_my_booking_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:layout_marginRight="@dimen/padding_5"
                    android:layout_marginBottom="@dimen/padding_1"
                    android:gravity="right"
                    android:text="@string/date_time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />
                <Button
                    android:visibility="gone"
                    android:layout_width="@dimen/padding_120"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Book"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:background="@drawable/btnbg"
                    android:layout_marginTop="@dimen/padding_10"/>
                <Button
                    android:id="@+id/btn_unavailable"
                    android:visibility="gone"
                    android:layout_width="@dimen/padding_100"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Unavailable"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:background="@drawable/btnbg"
                    android:layout_marginTop="@dimen/padding_10"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_my_booking_vehicle_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/pending_status_background"
            android:paddingLeft="@dimen/padding_5"
            android:paddingRight="@dimen/padding_8"
            android:text="@string/pending"
            android:textColor="@color/white"
            android:textSize="@dimen/padding_15" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>